<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HillActivity">

    <Button
        android:id="@+id/click_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/roundedbutton"
        android:onClick="buttonClicked"
        android:text="@string/startChallenge" />

    <EditText
        android:id="@+id/win_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:hint="@string/default_win_message"
        android:textColor="#727272"
        android:visibility="gone" />

    <TextView
        android:id="@+id/character_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/character_count_placeholder"
        android:visibility="gone" />

</LinearLayout><!-- From: file:/Users/vietle/AndroidStudioProjects/clickofthehill/app/src/main/res/layout/activity_hill.xml -->